<h1>New Fan</h1>

<%= flash[:fan_not_created] %>

<p>Please fill in the following fields, and then submit:</p>

<table>
  <tbody>
    <%= form_tag(fans_url) do %>
    <tr>
      <td><%= label_tag :name %></td>
      <td><%= text_field_tag :name %></td>
      <td><%= label_tag :email %><td> 
      <td><%= text_field_tag :email %></td>
      <td><%= label_tag :password %></td>
      <td><%= text_field_tag :password %></td>
      <td><%= submit_tag "Submit" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to "Fans", fans_url %></p>
<p><%= link_to "Home", home_url %></p>