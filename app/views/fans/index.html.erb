<h1>All Fans</h1>

<%= flash[:fan_destroyed] %>

<table>
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Password</th>
    </tr>
  </thead>
  <tbody>
    <% @fans.each do |fan| %>
    <tr>
      <td><%= link_to "#{fan.name}", fan_url(fan.id) %></td>
      <td><%= fan.email %></td>
      <td><%= fan.password %></td>
      <td><%= link_to "Edit", edit_fan_url(fan.id) %></td>
      <td><%= link_to "Delete", destroy_fan_url(fan.id), :method => :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<p><font color=red, size=4px>BUTTON: DELETE ALL FANS</font></p> <!-- this shows in green? -->

<p><%= link_to "Create Fan Profile", new_fan_url %></p>
<p><%= link_to "Home", home_url %></p>
<p><%= link_to "Gigs", gigs_url %></p>
<p><%= link_to "Albums", albums_url %></p>
<p><%= link_to "Songs", songs_url %></p>
<p><%= link_to "Blog", blogs_url %></p>

