<div class="form">
  
  <p>Fill in the following fields, and then submit:</p>

  <%= form_for @act do |f| %>

  	<div class="element">
      <%= f.label :name %><br />
      <%= f.text_field :name %><br />
    </div>
  
    <div class="element">
      <%= f.label :url, "URL" %><br />
      <%= f.text_field :url %><br />
    </div>
  
    <div class="element">
      <%= f.submit "Submit" %>
    </div>

  <% end %>

</div>