<div class="form">
  <ul>
  <% @article.errors.messages.each do |field, problem| %>
    <li><%= field %> <%= problem %></li>
  <% end %>
  </ul>
<%= form_for @article do |f| %>

    <%= f.hidden_field :user_id, :value => session[:user_id] %>
  
  <div class="element">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div><br />

  <div class="element">
    <%= f.label :category %><br />
    <%= f.select :category, Article.categories, include_blank: true %> or enter a new category 
    <%= f.text_field :category %>
  </div><br />

  <div class="element">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div><br />

  <div class="element">
    <%= f.submit "Submit" %>
  </div>

<% end %>
</div>
