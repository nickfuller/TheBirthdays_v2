<%= form_for @album, :html => {:multipart => true} do |f| %>

  <%= f.label :title, "Title" %><br />
  <%= f.text_field :title %><br />

  <%= f.label :date, "Release Date" %><br />
  <%= f.datetime_select :date %><br />
  
  <%= f.label :cover_art, "Cover Art" %><br />
  <%= f.file_field :cover_art %> or url <%= f.text_field :remote_cover_art_url %><br />  

  <%= f.submit "Submit" %>

<% end %>
