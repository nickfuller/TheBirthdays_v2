<h1>All Albums</h1>

<%= flash[:album_destroyed] %>

<table>
  <thead>
    <td>Title</td>
    <td>Date</td>
    <td>Cover Art</td>
  </thead>
  <tbody>
    <% @albums.each do |album| %>
    <tr>
      <td><%= link_to album.title, album_url(album.id) %></td>
      <td><%= album.date %></td>
      <td><%= album.cover_art %></td>
      <td><%= link_to "Edit", edit_album_url(album.id) %></td>
      <td><%= link_to "Delete", destroy_album_url(album.id), :method => :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to "New Album", new_album_url %></p>

<p><%= link_to "Songs", songs_url %></p>

<p><%= link_to "Fans", fans_url %></p>

<p><%= link_to "Gigs", gigs_url %></p>