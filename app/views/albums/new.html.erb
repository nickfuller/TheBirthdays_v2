<h1>New Album</h1>

<%= flash[:album_not_created] %>

<p>Please fill in the following fields, and then submit:</p>

<table>
  <tbody>
    <%= form_tag(albums_url) do %>
    <tr>
      <td><%= label_tag :title %></td>
      <td><%= text_field_tag :title %></td>
      
      <td><%= label_tag :date %><td> 
      <td><%= text_field_tag :date %></td>
      
      <td><%= label_tag :cover_art, "Cover Art" %></td>
      <td><%= text_field_tag :cover_art %></td>
      
      <td><%= submit_tag "Submit" %></td>
    </tr>
    <% end %>
  </tbody>
</table>