<h1>Sign In</h1>

<div class="form">
  
  <%= form_tag session_url do %>
  
    <div class="element">
      <%= label_tag :email %><br />
      <%= text_field_tag :email %>
    </div>
    
    <div class="element">
      <%= label_tag :password %><br />
      <%= password_field_tag :password %>
    </div>
    
    <div class="element">
      <%= submit_tag 'Sign In' %>
    </div>
    
  <% end %>  
  
</div>
