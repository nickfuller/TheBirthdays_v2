<% @future_gigs.each do |gig| %>
<tr>
    <td><%= link_to gig.date.strftime("%B %e, %Y (%A, %l:%M%P)"), gig_url(gig.id) %></td> 
    <% if gig.venue %>
      <td><%= gig.venue.name %></td>
    <% else %>
      <td></td>
    <% end %>
    <td>$<%= gig.cover %></td> 
  <% if @bandmember %>
    <td><%= link_to "Edit", edit_gig_url(gig.id) %> </td>
    <td><%= link_to "Delete", destroy_gig_url(gig.id), :method => :delete %></td>
  <% end %>
</tr>
<% end %>